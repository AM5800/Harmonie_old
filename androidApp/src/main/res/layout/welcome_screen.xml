<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" android:padding="10dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Welcome to Harmonie!"
                android:id="@+id/welcomeView"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Please choose languages you know well:"
                android:id="@+id/chooseKnownView"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center" android:layout_marginBottom="10dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/knownLanguagesList"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="And chose languages you want to learn"
                android:id="@+id/chooseLearnView" android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/learnLanguagesList"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Button"
                android:id="@+id/continueBtn"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"/>
    </LinearLayout>
</ScrollView>
